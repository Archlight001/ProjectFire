<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/marshallheading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="DATABASE MANAGEMENT SYSTEM"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/marshallheading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marshallheading1"
            android:layout_centerHorizontal="true"
            android:text="FIELD MARSHALLS COLUMN"
            android:textColor="@color/White"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/marshallrellayout2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/marshallheading2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="#B04A4A"
            android:padding="10dp">

            <TextView
                android:id="@+id/marshallquicksearchid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/White"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/marshalletquicksearch"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_below="@id/marshallquicksearchid"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittextbg"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:hint="Enter Marshalls FirstName/Surname"
                android:textSize="15sp" />

            <Button
                android:id="@+id/marshallbtnsearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/marshallquicksearchid"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/button_bg_mod"
                android:text="Search" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/marshallrellayout3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/marshallrellayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#B04A4A"
            android:padding="10dp">

            <TextView
                android:id="@+id/marshallviewleveltitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Marshalls By their Year of Graduation"
                android:textColor="@color/White"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/marshallspinnnerlevel"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/marshallviewleveltitle"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:popupBackground="@drawable/spinner"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/marshallbtnviewlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/marshallspinnnerlevel"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_bg_mod"
                android:text="View" />


            <Button
                android:id="@+id/marshallbtnviewall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/marshallbtnviewlevel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_mod"
                android:text="View All Field Marshalls of the Unit" />


        </RelativeLayout>

        <TextView
            android:id="@+id/marshalltvnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marshallrellayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="NOTE"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/marshalltvchangenote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marshalltvnote"
            android:layout_centerHorizontal="true"
            android:text="Changes such as Adding,Deleting or Modifying a members data will require your Adminstrative ID"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marshalltvchangenote"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Kindly Select the Menu Tab to perform more operations"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

</RelativeLayout>
