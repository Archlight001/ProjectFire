<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finebackground"
    android:padding="10dp"
    tools:context=".Member_Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <denokela.com.projectfire.CustomImageView
            android:id="@+id/profileimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:background="@drawable/img_bg_corners"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/view_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileimage"
            android:layout_alignParentTop="true"
            android:layout_marginTop="149dp"
            android:text="First Name:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_firstname"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:textColor="@color/White"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/view_middlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_firstname"
            android:layout_marginTop="10dp"
            android:text="Middle Name:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_middle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_middlename"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:textColor="@color/White"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/view_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_middlename"
            android:layout_marginTop="10dp"
            android:text="Surname:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_surname"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_surname"
            android:layout_marginTop="10dp"
            android:text="Phone Number:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/copycontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_surname"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/view_phonenumber"
            android:background="@drawable/ic_content_copy" />

        <TextView
            android:id="@+id/profile_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_phonenumber"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="145dp"
            android:layout_marginLeft="145dp"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_phonenumber"
            android:layout_marginTop="10dp"
            android:text="Birthday:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_birthday"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="85dp"
            android:textColor="@color/White"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/view_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_birthday"
            android:layout_marginTop="10dp"
            android:text="Course:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_course"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_course"
            android:layout_marginTop="10dp"
            android:text="State:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/profile_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_state"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="58dp"
            android:layout_marginLeft="58dp"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_state"
            android:layout_marginTop="10dp"
            android:text="Level:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_level"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_level"
            android:layout_marginTop="10dp"
            android:text="Year Joined:"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_year"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_year"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg_mod"
            android:text="Edit"
            android:textStyle="bold"
            android:onClick="Edit"
            />
    </RelativeLayout>

</ScrollView>